<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gorun8.easyfk.party.dao.PartyClsGroupDao">

    <select id="findPartyClsGroupByName" parameterType="java.lang.String"    resultType="cn.gorun8.easyfk.entity.GenericValue">
        SELECT  * FROM party_classification_group WHERE  DESCRIPTION =#{description}
    </select>

    <select id="findChildPartyClsGroupList" parameterType="java.lang.String"    resultType="cn.gorun8.easyfk.entity.GenericValue">
        SELECT  * FROM party_classification_group WHERE PARENT_GROUP_ID = #{parentId}
    </select>

    <select id="findChildPartyClsGroupCount" parameterType="java.lang.String"    resultType="java.lang.Integer">
        SELECT  count(*) FROM party_classification_group where PARENT_GROUP_ID = #{parentId}
    </select>


    <select id="findChildPartyClsGroupByName" parameterType="java.lang.String"    resultType="cn.gorun8.easyfk.entity.GenericValue">
        SELECT  * FROM party_classification_group WHERE PARENT_GROUP_ID = #{parentId} AND DESCRIPTION =#{description}
    </select>



    <select id="findPartyClsGroupById" parameterType="java.lang.String"    resultType="cn.gorun8.easyfk.entity.GenericValue">
        SELECT  * FROM party_classification_group WHERE PARTY_CLASSIFICATION_GROUP_ID = #{partyClsGroupId}
    </select>

    <insert id="createPartyClsGroup" parameterType="cn.gorun8.easyfk.entity.GenericValue">
            INSERT INTO party_classification_group(
             PARTY_CLASSIFICATION_GROUP_ID,
             PARTY_CLASSIFICATION_TYPE_ID,
             PARENT_GROUP_ID,
             DESCRIPTION)
            VALUES (
            #{partyClsGroup.PARTY_CLASSIFICATION_GROUP_ID},
            #{partyClsGroup.PARTY_CLASSIFICATION_TYPE_ID},
            #{partyClsGroup.PARENT_GROUP_ID},
            #{partyClsGroup.DESCRIPTION}
            )

    </insert>

    <update id="savePartyClsGroup" parameterType="cn.gorun8.easyfk.entity.GenericValue">
          UPDATE party_classification_group
          SET
           PARENT_GROUP_ID = #{partyClsGroup.PARENT_GROUP_ID},
           DESCRIPTION = #{partyClsGroup.DESCRIPTION}
          WHERE
            PARTY_CLASSIFICATION_GROUP_ID =#{partyClsGroup.PARTY_CLASSIFICATION_GROUP_ID}
    </update>

    <delete id="removePartyClsGroupByPrimaryKey" parameterType="java.lang.String">
            DELETE  FROM party_classification_group
            WHERE   PARTY_CLASSIFICATION_GROUP_ID =#{partyClsGroupId}
    </delete>



    <insert id="setPartyClassification" parameterType="cn.gorun8.easyfk.entity.GenericValue">
    INSERT INTO party_classification(
             PARTY_ID,
             PARTY_CLASSIFICATION_GROUP_ID,
             FROM_DATE
        <if test="partyCls.THRU_DATE != null">
            ,THRU_DATE
        </if>
        <if test="partyCls.LAST_UPDATED_STAMP != null">
            ,LAST_UPDATED_STAMP
        </if>
        <if test="partyCls.LAST_UPDATED_TX_STAMP != null">
            ,LAST_UPDATED_TX_STAMP
        </if>
        <if test="partyCls.CREATED_STAMP != null">
            ,CREATED_STAMP
        </if>
        <if test="partyCls.CREATED_TX_STAMP != null">
            ,CREATED_TX_STAMP
        </if>
        )VALUES (
            #{partyCls.PARTY_ID},
            #{partyCls.PARTY_CLASSIFICATION_GROUP_ID},
            #{partyCls.FROM_DATE}
            <if test="partyCls.THRU_DATE != null">
                ,#{partyCls.THRU_DATE}
            </if>
            <if test="partyCls.LAST_UPDATED_STAMP != null">
                ,#{partyCls.LAST_UPDATED_STAMP}
            </if>
            <if test="partyCls.LAST_UPDATED_TX_STAMP != null">
                ,#{partyCls.LAST_UPDATED_TX_STAMP}
            </if>
            <if test="partyCls.CREATED_STAMP != null">
                ,#{partyCls.CREATED_STAMP}
            </if>
            <if test="partyCls.CREATED_TX_STAMP != null">
                ,#{partyCls.CREATED_TX_STAMP}
            </if>
            )
    </insert>

</mapper>